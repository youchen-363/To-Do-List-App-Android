<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/labelNameTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/asap_medium"
        android:text="@string/name_task"
        android:textColor="#f85f6a"
        app:layout_constraintBottom_toTopOf="@+id/fieldName"
        app:layout_constraintEnd_toEndOf="@+id/titleDetail"
        app:layout_constraintStart_toStartOf="@+id/titleDetail"
        app:layout_constraintTop_toBottomOf="@+id/titleDetail" />

    <TextView
        android:id="@+id/labelDescTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/asap_medium"
        android:text="@string/desc_task"
        android:textColor="#f85f6a"
        app:layout_constraintBottom_toTopOf="@id/fieldDesc"
        app:layout_constraintEnd_toEndOf="@+id/labelNameTask"
        app:layout_constraintStart_toStartOf="@+id/labelNameTask"
        app:layout_constraintTop_toBottomOf="@+id/fieldName" />

    <TextView
        android:id="@+id/textPriorityTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/asap_medium"
        android:text="@string/priority_task"
        android:textColor="#F85F6A"
        app:layout_constraintBottom_toTopOf="@+id/fieldPriority"
        app:layout_constraintEnd_toEndOf="@+id/labelDescTask"
        app:layout_constraintStart_toStartOf="@+id/labelDescTask"
        app:layout_constraintTop_toBottomOf="@+id/fieldDesc" />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/todo_list"
        app:layout_constraintBottom_toTopOf="@+id/titleDetail"
        app:layout_constraintEnd_toStartOf="@+id/titleDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />


    <TextView
        android:id="@+id/labelDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/asap_medium"
        android:text="@string/date_task"
        android:textColor="#F85F6A"
        app:layout_constraintBottom_toTopOf="@id/fieldDate"
        app:layout_constraintEnd_toEndOf="@+id/textPriorityTask"
        app:layout_constraintStart_toStartOf="@+id/textPriorityTask"
        app:layout_constraintTop_toBottomOf="@+id/fieldPriority" />

    <TextView
        android:id="@+id/fieldName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/asap"
        android:text="@string/fieldName"
        app:layout_constraintBottom_toTopOf="@+id/labelDescTask"
        app:layout_constraintEnd_toEndOf="@+id/labelNameTask"
        app:layout_constraintStart_toStartOf="@+id/labelNameTask"
        app:layout_constraintTop_toBottomOf="@+id/labelNameTask" />

    <TextView
        android:id="@+id/fieldDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/asap"
        android:text="@string/fieldDesc"
        app:layout_constraintBottom_toTopOf="@+id/textPriorityTask"
        app:layout_constraintEnd_toEndOf="@+id/labelDescTask"
        app:layout_constraintStart_toStartOf="@+id/labelDescTask"
        app:layout_constraintTop_toBottomOf="@+id/labelDescTask" />

    <TextView
        android:id="@+id/fieldPriority"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/asap"
        android:text="@string/fieldPriority"
        app:layout_constraintBottom_toTopOf="@id/labelDate"
        app:layout_constraintEnd_toEndOf="@+id/textPriorityTask"
        app:layout_constraintStart_toStartOf="@+id/textPriorityTask"
        app:layout_constraintTop_toBottomOf="@+id/textPriorityTask" />

    <TextView
        android:id="@+id/fieldDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/asap"
        android:text="@string/date"
        app:layout_constraintEnd_toEndOf="@+id/labelDate"
        app:layout_constraintStart_toStartOf="@+id/labelDate"
        app:layout_constraintTop_toBottomOf="@+id/labelDate" />

    <TextView
        android:id="@+id/titleDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="55dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/title_detail"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/labelNameTask"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_Delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="331dp"
        android:background="@drawable/button_custom"
        android:text="@string/delete_task"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/titleDetail"
        app:layout_constraintStart_toStartOf="@+id/titleDetail"
        app:layout_constraintTop_toBottomOf="@+id/fieldDate" />


</androidx.constraintlayout.widget.ConstraintLayout>